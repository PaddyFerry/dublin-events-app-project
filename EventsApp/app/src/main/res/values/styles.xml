<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MySpinnerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">#303030</item>
    </style>


    <style name="Customback" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>
    </style>

    <style name="Customback.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Customback.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchView" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/icons8_search_24</item>
        <item name="android:textColor">#FFF</item>
    </style>


</resources>
